<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsit.jo.nsitsportsadmin.chooseCriteria">


    <Spinner
        android:id="@+id/yearSpinCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:entries="@array/yearTypes"/>




    <Spinner
        android:id="@+id/sportSpinCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yearSpinCC"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:entries="@array/sportTypes"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sportSpinCC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Go"
        android:onClick="showList"/>
</RelativeLayout>